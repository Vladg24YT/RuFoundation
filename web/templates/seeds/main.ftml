    justify-content: center;
}

.scp-front-simpleblock {
    display: flex;
    flex-direction: column;
}

.scp-front-simpleblock > .lb-title {
    margin-right: auto;
}

.lb-full-block {
    grid-column: 1 / span 2;
    padding: 24px;
}

.lb-title {
    border-bottom: 2px solid #6f6f6f;
    background: #cccccc;
    padding: 4px 24px;
    text-transform: uppercase;
    position: relative;
    display: flex;
    align-items: center;
    min-width: 230px;
}

.lb-title::before,
.lb-title::after {
    position: absolute;
    content: '';
    left: 100%;
    top: 0;
    bottom: -2px;
    width: 24px;
}

.lb-title::before {
    background: #cccccc;
    clip-path: polygon(0 0, calc(100% - 1px) 0, 0 calc(100% - 1px));
}

.lb-title::after {
    background: #6f6f6f;
    clip-path: polygon(0 calc(100% - 2px), calc(100% - 2.5px) 0, 100% 0, 1px 100%, 0 100%);
}

.lb-subtitle {
    margin-left: 24px;
    padding: 4px 10px;
    text-transform: uppercase;
    display: flex;
    align-items: center;
}

.lb-right-block {
    border-left: 1px solid #dcdcdc;
    margin: 16px 0;
    padding: 16px 32px;
}

.lb-many-articles {
    font-size: 14px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.lb-many-articles a {
    display: block;
    margin: 4px 0;
}

.lb-article-desc {
    display: flex;
    align-items: center;
    flex-direction: row-reverse;
}

.lb-article-class {
    background: #31869b;
    min-width: 80px;
    min-height: 80px;
    margin-left: 32px;
    align-self: center;
    color: white;
    display: flex;
    font-size: 48px;
    line-height: 48px;
    align-items: center;
    justify-content: center;
}

.lb-article-class.lb-safe {
    background: #4e6c77;
    --text: 'S';
}

.lb-article-class.lb-euclid {
    background: #ffc000;
    --text: 'E';
}

.lb-article-class.lb-keter {
    background: #b80000;
    --text: 'K';
}

.lb-article-class.lb-thaumiel {
    background: #7c35b1;
    --text: 'T';
}

.lb-article-class.lb-neutralized {
    background: #dddddd;
    --text: 'N';
    color: black;
}

.lb-article-class.lb-non-standard {
    background: #4479f7;
    --text: '?';
}

.lb-article-class::before {
    content: var(--text);
}

